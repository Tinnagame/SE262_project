<header><%- include('../partials/header');%></header>
<div><%- include('../partials/navbar');%></div>
<div style="background-color: #1f0e33">
  <h1
    style="
      padding-left: 36px;
      padding-top: 36px;
      margin-bottom: 36px;
      color: #ffffff;
    "
  >
    <%= gameInfo.product_name %>
  </h1>
  <div
    class="row"
    style="
      padding-left: 36px;
      padding-top: 36px;
      padding: 36px;
      color: #ffffff;
    "
  >
    <div class="col-6">
      <img src="<%= gameInfo.product_images %>" style="width: 678px; height: 388px;"/>
    </div>
    <div class="col-6">
      <div>
        <p style="text-align: center">ABOUT THIS GAME</p>
        <p><%= gameInfo.product_description %></p>
        <p style="text-align: center;color: #ECEFF4; font-size: 40px; font-style: italic;">$<%= gameInfo.product_price %></p>
      </div>
      
        <form action="" method="post">
          <div style="display: flex">
            <div style="display: flex ; height: 60px; margin-right: 19px;align-items: center; background-color: #ffffff; border-radius: 36px;">
              <button type="button" style="background-color: white; color: #3a4980; width: 56px;
              height: 59px;border-top-left-radius: 36px;border-bottom-left-radius: 36px">-</button>
              <div>
                <p style="color: #3A4980; padding-top: 35px; font-weight: 700;">1</p>
              </div>
              <button class="" type="button" style="background-color: white; color: #3a4980 ; width: 56px;
              height: 59px;border-top-right-radius: 36px;border-bottom-right-radius: 36px
              ">+</button>
            </div>
            <div>
              <button
              type="submit"
                class="btn btn-primary"
                style="
                  background-color: #5880a4;
                  width: 309px;
                  height: 59px;
                  border-radius: 36px;
                  font-weight: 600;
                  font-size: 16px;
                "
              >
                <img
                  style="vertical-align: text-top; margin-right: 10px"
                  src="/icons/bag.png"
                />
                Add To Cart
              </button>
          </div>
          
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<footer><%- include('../partials/footer');%></footer>
